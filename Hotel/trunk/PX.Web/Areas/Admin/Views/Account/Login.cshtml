@model dynamic

@{
    ViewBag.Title = "Login Page";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.Blank.cshtml";
}

<div class="login-layout">
    <div class="main-container">
        <div class="main-content">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="login-container">
                        <div class="center">
                            <h1>
                                <i class="icon-lock blue"></i>
                                <span class="red">Login</span>
                                <span class="light-blue">Page</span>
                            </h1>
                            <h4 class="blue">&copy; PX Hotel</h4>
                        </div>

                        <div class="space-6"></div>

                        <div class="position-relative">
                            @{
                                Html.RenderAction("LoginForm");
                                Html.RenderAction("ForgotPasswordForm");
                                Html.RenderAction("RegisterForm");
                            }
                        </div>
                        <!-- /position-relative -->
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
    </div>
    <!-- /.main-container -->
</div>

@section scripts
{
    <script type="text/javascript">
        function show_box(id) {
            jQuery('.widget-box.visible').removeClass('visible');
            jQuery('#' + id).addClass('visible');
        }

        function OnSuccess(response) {
            if(response.Success) {
                location.href = response.Data;
            }
            else {
                alert(response.Message);
            }
        }
    </script>
}
