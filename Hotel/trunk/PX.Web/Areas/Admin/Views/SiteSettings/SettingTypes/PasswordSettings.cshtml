@using PX.Core.Framework.Enums
@model PX.Business.Models.Settings.SettingTypes.PasswordSetting

<div class="form-group">
    @MText(Tags.Label, "AdminModule:::SiteSettings:::Forms:::PasswordMinLengthRequired", "PasswordMinLengthRequired", new { @class = "col-xs-2 col-sm-1 control-label no-padding-right", @for = "Name" })
    <div class="col-xs-10 col-sm-11">
        @Html.TextBoxFor(m => m.PasswordMinLengthRequired, new { @class = "col-xs-12", placeholder = T("AdminModule:::PageTemplates:::Form:::Name place holder", "Please input template name") })
        @Html.ValidationMessageFor(m => m.PasswordMinLengthRequired)
    </div>
</div>
<div class="form-group">
    @MText(Tags.Label, "AdminModule:::SiteSettings:::Forms:::PasswordMustHaveDigit", "Password Must Have Digit", new { @class = "col-xs-2 col-sm-1 control-label no-padding-right", @for = "Name" })
    <div class="col-xs-10 col-sm-11">
        @Html.CheckBoxFor(m => m.PasswordMustHaveDigit)
        @Html.ValidationMessageFor(m => m.PasswordMustHaveDigit)
    </div>
</div>
<div class="form-group">
    @MText(Tags.Label, "AdminModule:::SiteSettings:::PasswordMustHaveSymbol:::Name", "Name", new { @class = "col-xs-2 col-sm-1 control-label no-padding-right", @for = "Name" })
    <div class="col-xs-10 col-sm-11">
        @Html.TextBoxFor(m => m.PasswordMinLengthRequired, new { @class = "col-xs-12", placeholder = T("AdminModule:::PageTemplates:::Form:::Name place holder", "Please input template name") })
        @Html.ValidationMessageFor(m => m.PasswordMinLengthRequired)
    </div>
</div>
<div class="form-group">
    @MText(Tags.Label, "AdminModule:::SiteSettings:::Forms:::PasswordMustHaveUpperAndLowerCaseLetters", "Password Must Have Upper And Lower Case Letters", new { @class = "col-xs-2 col-sm-1 control-label no-padding-right", @for = "PasswordMustHaveSymbol" })
    <div class="col-xs-10 col-sm-11">
        @Html.CheckBoxFor(m => m.PasswordMustHaveUpperAndLowerCaseLetters)
        @Html.ValidationMessageFor(m => m.PasswordMustHaveUpperAndLowerCaseLetters)
    </div>
</div>
<div class="space-4"></div>
<div class="clearfix form-actions">
    <div class="col-md-offset-3 col-md-9">
        <button class="btn btn-link" type="button" onclick="history.back(1);">
            Back To List
        </button>
        <button class="btn btn-primary" type="submit" value="@SubmitTypeEnums.Save" name="Submit">
            <i class="icon-ok bigger-110"></i>
            Save
        </button>
        <button class="btn btn-info" type="submit" value="@SubmitTypeEnums.SaveAndContinueEdit" name="Submit">
            <i class="icon-ok bigger-110"></i>
            Save and Continue Edit
        </button>
        <button class="btn" onclick="location.href= window.location.href;" type="reset">
            <i class="icon-undo bigger-110"></i>
            Reset
        </button>
    </div>
</div>