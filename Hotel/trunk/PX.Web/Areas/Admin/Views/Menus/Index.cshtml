            "fa fa-folder-open": "fa fa-folder-open",
            "fa fa-folder-close-alt": "fa fa-folder-close-alt",
            "fa fa-folder-open-alt": "fa fa-folder-open-alt",
            "fa fa-food": "fa fa-food",
