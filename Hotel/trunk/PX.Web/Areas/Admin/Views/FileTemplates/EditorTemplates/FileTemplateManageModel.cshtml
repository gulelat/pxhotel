@using PX.Core.Framework.Enums
@model PX.Business.Models.FileTemplates.FileTemplateManageModel

@Html.HiddenFor(m => m.Id)
<div class="form-group">
    @MText(Tags.Label, "AdminModule:::FileTemplates:::Forms:::Name", "Name", new { @class = "col-xs-3 col-sm-1 control-label no-padding-right", @for = "Name" })
    <div class="col-xs-9 col-sm-11">
        @Html.TextBoxFor(m => m.Name, new { @class = "col-xs-12", placeholder = T("AdminModule:::FileTemplates:::Form:::Name place holder", "Please input template name") })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
</div>
<div class="space-4"></div>
<div class="form-group">
    @MText(Tags.Label, "AdminModule:::FileTemplates:::Forms:::Controller", "Controller", new { @class = "col-xs-3 col-sm-1 control-label no-padding-right", @for = "Controller" })
    <div class="col-xs-9 col-sm-11">
        @Html.TextBoxFor(m => m.Controller, new { @class = "col-xs-12" })
        @Html.ValidationMessageFor(m => m.Controller)
    </div>
</div>
<div class="space-4"></div>
<div class="form-group">
    @MText(Tags.Label, "AdminModule:::FileTemplates:::Forms:::Action", "Action", new { @class = "col-xs-3 col-sm-1 control-label no-padding-right", @for = "Action" })
    <div class="col-xs-9 col-sm-11">
        @Html.TextBoxFor(m => m.Action, new { @class = "col-xs-12" })
        @Html.ValidationMessageFor(m => m.Action)
    </div>
</div>
<div class="space-4"></div>
<div class="form-group">
    @MText(Tags.Label, "AdminModule:::FileTemplates:::Forms:::Parameters", "Parameters", new { @class = "col-xs-3 col-sm-1 control-label no-padding-right", @for = "Parameters" })
    <div class="col-xs-9 col-sm-11">
        @Html.TextBoxFor(m => m.Parameters, new { @class = "col-xs-12" })
        @Html.ValidationMessageFor(m => m.Parameters)
    </div>
</div>
<div class="space-4"></div>
<div class="form-group">
    @MText(Tags.Label, "AdminModule:::FileTemplates:::Forms:::Page Template Dropdown", "Page Template", new { @class = "col-xs-3 col-sm-1 control-label no-padding-right", @for = "PageTemplateId" })
    <div class="col-xs-9 col-sm-11">
        @Html.DropDownListFor(m => m.PageTemplateId, Model.PageTemplates, "..Select page template ..", new { @class = "form-control col-xs-12" })
        @Html.ValidationMessageFor(m => m.PageTemplateId)
    </div>
</div>
<div class="space-4"></div>
<div class="form-group">
    @MText(Tags.Label, "AdminModule:::FileTemplates:::Forms:::Parent Dropdown", "Parent", new { @class = "col-xs-3 col-sm-1 control-label no-padding-right", @for = "ParentId" })
    <div class="col-xs-9 col-sm-11">
        @Html.DropDownListFor(m => m.ParentId, Model.Parents, "..Select parent ..", new { @class = "form-control col-xs-12" })
        @Html.ValidationMessageFor(m => m.ParentId)
    </div>
</div>
<div class="space-4"></div>
<div class="clearfix form-actions">
    <div class="col-md-offset-3 col-md-9">
        <a class="btn btn-link" href="@Url.Action("Index")">Back To List
        </a>
        <button class="btn btn-primary" type="submit" value="@SubmitTypeEnums.Save" name="Submit">
            <i class="icon-ok bigger-110"></i>
            Save
        </button>
        <button class="btn btn-info" type="submit" value="@SubmitTypeEnums.SaveAndContinueEdit" name="Submit">
            <i class="icon-ok bigger-110"></i>
            Save and Continue Edit
        </button>
        <button class="btn" onclick="location.href= window.location.href;" type="reset">
            <i class="icon-undo bigger-110"></i>
            Reset
        </button>
    </div>
</div>
