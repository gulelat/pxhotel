@using PX.Core.Framework.Enums
@model PX.Business.Models.Banners.BannerManageModel

@Html.HiddenFor(m => m.Id)
<div class="form-group">
    <div class="col-xs-10 col-md-offset-1">
        <img id="banner-image" style="max-height: 400px" src="@Model.ImageUrl" class="img-responsive"/>
    </div>
</div>
<div class="space-4"></div>
<div class="form-group">
    @MText(Tags.Label, "AdminModule:::Banners:::Forms:::ImageUrl", "Image Url", new { @class = "col-sm-2 control-label no-padding-right", @for = "Text" })
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.ImageUrl, new { id = "imageUrl", @class = "col-xs-8" })
        <a class="btn btn-info btn-xs browsefile" style="margin: 2px" href="javascript:void(0)">
            <i class="fa fa-picture bigger-110 icon-only"></i>
        </a>
        <div class="clearfix"></div>
        @Html.ValidationMessageFor(m => m.ImageUrl)
    </div>
</div>
<div class="space-4"></div>
<div class="form-group">
    @MText(Tags.Label, "AdminModule:::Banners:::Forms:::Text", "Text", new { @class = "col-sm-2 control-label no-padding-right", @for = "Text" })
    <div class="col-sm-10">
        @Html.TextAreaFor(m => m.Text, new { @class = "col-xs-8", id = "bannerText", placeholder = T("AdminModule:::Banners:::Form:::Text place holder", "Please input text") })
        @Html.ValidationMessageFor(m => m.Text)
    </div>
</div>
<div class="space-4"></div>
<div class="form-group">
    @MText(Tags.Label, "AdminModule:::Banners:::Forms:::Url", "Url", new { @class = "col-sm-2 control-label no-padding-right", @for = "Url" })
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.Url, new { @class = "col-xs-8" })
        @Html.ValidationMessageFor(m => m.Url)
    </div>
</div>
<div class="space-4"></div>
<div class="form-group">
    @MText(Tags.Label, "AdminModule:::Banners:::Forms:::BannerGroups", "Group", new { @class = "col-sm-2 control-label no-padding-right", @for = "GroupId" })
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.GroupName, new { @class = "col-xs-8" })
        @Html.ValidationMessageFor(m => m.GroupName)
    </div>
</div>
<div class="space-4"></div>
<div class="clearfix form-actions">
    <div class="col-md-offset-3 col-md-9">
        <a class="btn btn-link" href="@Url.Action("Index")">Back To List
        </a>
        <button class="btn btn-primary" type="submit" value="@SubmitTypeEnums.Save" name="Submit">
            <i class="fa fa-check bigger-110"></i>
            Save
        </button>
        <button class="btn btn-info" type="submit" value="@SubmitTypeEnums.SaveAndContinueEdit" name="Submit">
            <i class="fa fa-check bigger-110"></i>
            Save and Continue Edit
        </button>
        <button class="btn" onclick="location.href= window.location.href;" type="reset">
            <i class="fa fa-undo bigger-110"></i>
            Reset
        </button>
    </div>
</div>

<script type="text/javascript" src="@Url.Content("~/Scripts/ckeditor/ckeditor.js")"></script>
<script type="text/javascript">
    CKEDITOR.replace('bannerText');
    function selectImage(imageUrl) {
        $("#banner-image").attr("src", imageUrl);
    }
</script>
