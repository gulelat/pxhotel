@using PX.Core.Framework.Enums
@model PX.Business.Models.Pages.PageManageModel

@Html.HiddenFor(m => m.Id)
<div class="form-group">
    @MText(Tags.Label, "AdminModule:::Pages:::Forms:::Title", "Title", new { @class = "col-sm-2 control-label no-padding-right", @for = "Title" })
    <div class="col-sm-4">
        @Html.TextBoxFor(m => m.Title, new { @class = "col-sm-12", placeholder = T("AdminModule:::Pages:::Form:::Title place holder", "Please input page title") })
        @Html.ValidationMessageFor(m => m.Title)
    </div>
    @MText(Tags.Label, "AdminModule:::Pages:::Forms:::FriendlyUrl", "Friendly Url", new { @class = "col-sm-2 control-label no-padding-right", @for = "FriendlyUrl" })
    <div class="col-sm-4">
        @Html.TextBoxFor(m => m.FriendlyUrl, new { @class = "col-sm-12" })
        @Html.ValidationMessageFor(m => m.FriendlyUrl)
    </div>
</div>
<div class="form-group">
    @MText(Tags.Label, "AdminModule:::Pages:::Forms:::Caption", "Caption", new { @class = "col-sm-2 control-label no-padding-right", @for = "Caption" })
    <div class="col-sm-10">
        @Html.TextAreaFor(m => m.Caption, new { @class = "col-sm-12", placeholder = T("AdminModule:::Pages:::Form:::Caption place holder", "Please input page caption") })
        @Html.ValidationMessageFor(m => m.Caption)
    </div>
</div>
<div class="space-4"></div>
<div class="form-group">
    @MText(Tags.Label, "AdminModule:::Pages:::Forms:::Content", "Content", new { @class = "col-sm-2 control-label no-padding-right", @for = "Content" })
    <div class="col-sm-10">
        <div class="btn-group">
            <button class="btn btn-xs dropdown-toggle" data-toggle="dropdown">
                @MText(Tags.Text, "AdminModule:::Pages:::Forms:::AddCurlyBracket", "Add curly bracket")
                <span class="caret"></span>
            </button>
            <ul id="curlyBracketList" class="dropdown-menu">
            </ul>
        </div>
        @Html.TextAreaFor(m => m.Content, new { @class = "col-sm-12" })
        @Html.ValidationMessageFor(m => m.Content)
    </div>
</div>
<div class="space-4"></div>
<div class="form-group">
    @MText(Tags.Label, "AdminModule:::Pages:::Forms:::Parent Page Dropdown", "Parent", new { @class = "col-sm-2 control-label no-padding-right", @for = "ParentId" })
    <div class="col-sm-10">
        @Html.DropDownListFor(m => m.ParentId, Model.Parents, "..Select parent page..", new { @class = "form-control col-xs-10 col-sm-4" })
        @Html.ValidationMessageFor(m => m.ParentId)
    </div>
</div>
<div class="space-4"></div>
<div class="clearfix form-actions">
    <div class="col-md-offset-1 col-md-9">
        <button class="btn btn-link" type="button" onclick="history.back(1);">
            Back To List
        </button>
        <button class="btn btn-primary" type="submit" value="@SubmitTypeEnums.Save" name="Submit">
            <i class="icon-ok bigger-110"></i>
            Save
        </button>
        <button class="btn btn-info" type="submit" value="@SubmitTypeEnums.SaveAndContinueEdit" name="Submit">
            <i class="icon-ok bigger-110"></i>
            Save and Continue Edit
        </button>
        <button class="btn" onclick="location.href= window.location.href;" type="reset">
            <i class="icon-undo bigger-110"></i>
            Reset
        </button>
    </div>
</div>
