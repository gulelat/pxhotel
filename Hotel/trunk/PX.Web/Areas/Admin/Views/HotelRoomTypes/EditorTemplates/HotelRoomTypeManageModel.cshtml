@using PX.Core.Framework.Enums
@model PX.Business.Models.HotelRoomTypes.HotelRoomTypeManageModel
@Html.HiddenFor(m => m.Id)
<div class="form-group">
    @MText(Tags.Label, "AdminModule:::HotelRoomTypes:::Forms:::Name", "Name", new { @class = "col-sm-1 no-padding-right", @for = "Name" })
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.Name, new { @class = "col-sm-12" })
        @Html.ValidationMessageFor(m => m.Name)
    </div>
</div>
<div class="space-4"></div>
<div class="form-group">
    @MText(Tags.Label, "AdminModule:::HotelRoomTypes:::Forms:::Price", "Price", new { @class = "col-sm-1 no-padding-right", @for = "Price" })
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.Price, new { @class = "col-sm-12" })
        @Html.ValidationMessageFor(m => m.Price)
    </div>
</div>
<div class="space-4"></div>
<div class="form-group">
    @MText(Tags.Label, "AdminModule:::HotelRoomTypes:::Forms:::Services", "Services", new { @class = "col-sm-1 no-padding-right", @for = "HotelRoomTypeServiceIds" })
    <div class="col-sm-10">
        @Html.ListBoxFor(m => m.HotelRoomTypeServiceIds, Model.HotelRoomTypeServices, new { @class = "form-control tag-input-style chosen-select col-xs-10 col-sm-4", multiple = "multiple" })
        @Html.ValidationMessageFor(m => m.HotelRoomTypeServiceIds)
    </div>
</div>
<div class="space-4"></div>
<div class="form-group">
    @MText(Tags.Label, "AdminModule:::HotelRoomTypes:::Forms:::Description", "Description", new { @class = "col-sm-1 no-padding-right", @for = "Description" })
    <div class="col-sm-10">
        @Html.TextAreaFor(m => m.Description, new { @class = "col-sm-12", placeholder = T("AdminModule:::HotelRoomTypes:::Forms:::Description place holder", "Please input page description") })
        @Html.ValidationMessageFor(m => m.Description)
    </div>
</div>
<div class="space-4"></div>
<div class="form-group">
    @MText(Tags.Label, "AdminModule:::HotelRoomTypes:::Forms:::RecordOrder", "Order", new { @class = "col-sm-1 no-padding-right", @for = "RecordOrder" })
    <div class="col-sm-10">
        @Html.TextBoxFor(m => m.RecordOrder, new { @class = "col-sm-12" })
        @Html.ValidationMessageFor(m => m.RecordOrder)
    </div>
</div>
<div class="space-4"></div>
<div class="clearfix form-actions">
    <div class="col-md-offset-1 col-md-9">
        <a class="btn btn-link" href="@Url.Action("Index")">Back To List
        </a>
        <button class="btn btn-primary" type="submit" value="@SubmitTypeEnums.Save" name="Submit">
            <i class="fa fa-check bigger-110"></i>
            Save
        </button>
        <button class="btn btn-info" type="submit" value="@SubmitTypeEnums.SaveAndContinueEdit" name="Submit">
            <i class="fa fa-check bigger-110"></i>
            Save and Continue Edit
        </button>
        <button class="btn" onclick="location.href= window.location.href;" type="reset">
            <i class="fa fa-undo bigger-110"></i>
            Reset
        </button>
    </div>
</div>
<link rel="stylesheet" href="@Url.Content("~/Content/backend/css/chosen.css")" />
<script src="@Url.Content("~/Scripts/Backend/chosen.jquery.min.js")"></script>
<script>
    $(".chosen-select").chosen();
    $('.chosen-container').each(function () {
        $(this).css('width', '100%');
        $(this).find('input').css('height', 'auto');
    });
</script>
